{
  "name": "JSON Formatter Pro 2026",
  "version": "2.0.0",
  "manifest_version": 3,
  "description": "Next-generation JSON Formatter for 2026 - Ultra-modern, blazingly fast JSON viewer with AI-powered insights, holographic themes, neural navigation, and futuristic interaction patterns. Experience the future of data visualization.",
  "homepage_url": "https://github.com/json-formatter-pro-2026",
  "minimum_chrome_version": "120",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "clipboardWrite", "activeTab"],
  "host_permissions": ["*://*/*", "<all_urls>"],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
